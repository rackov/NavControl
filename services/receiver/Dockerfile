FROM golang:1.22-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o receiver ./services/receiver/cmd/main.go

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

RUN mkdir -p /log

COPY --from=builder /app/receiver .
COPY --from=builder /app/NavControl/cfg ./NavControl/cfg

EXPOSE 8080
EXPOSE 9090

CMD ["./receiver", "-config", "NavControl/cfg/receiver.toml"]